<Window x:Class="geilaSheply.SettingsUniversity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:geilaSheply"
        mc:Ignorable="d"
        Title="Список ВУЗов" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ListUniversitiesGrid" HorizontalAlignment="Left" Height="360" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" IsReadOnly="True" AutoGenerateColumns="False">
            
        </DataGrid>
        <Button Content="Удалить ВУЗ из списка" HorizontalAlignment="Left" Margin="602,380,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click_1"/>
        <Button Content="Очистить список" HorizontalAlignment="Left" Margin="306,380,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click_2"/>

    </Grid>
</Window>
